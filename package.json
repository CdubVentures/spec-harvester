{
  "name": "spec-harvester",
  "version": "1.0.0",
  "description": "Backend-first mouse spec harvester with S3 IO",
  "type": "module",
  "main": "src/cli/spec.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "node --test",
    "run:one": "node src/cli/spec.js run-one",
    "run:adhoc": "node src/cli/spec.js run-ad-hoc",
    "run:batch": "node src/cli/spec.js run-batch",
    "discover": "node src/cli/spec.js discover",
    "discover-sources": "node src/cli/spec.js discover",
    "crawl-product": "node src/cli/spec.js run-one",
    "build-index": "node src/cli/spec.js rebuild-index",
    "sources-plan": "node src/cli/spec.js sources-plan",
    "sources-report": "node src/cli/spec.js sources-report",
    "rebuild-index": "node src/cli/spec.js rebuild-index",
    "smoke": "node src/cli/spec.js run-one --local --dry-run --s3key specs/inputs/mouse/products/mouse-razer-viper-v3-pro.json",
    "smoke:local": "node src/cli/smoke-local.js",
    "test:s3": "node src/cli/spec.js test-s3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.862.0",
    "pdf-parse": "^1.1.1",
    "playwright": "^1.54.2"
  }
}
