{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specfactory.local/schemas/cross_validation_rules_schema.json",
  "title": "Cross Validation Rules",
  "type": "object",
  "required": [
    "category",
    "rules"
  ],
  "properties": {
    "category": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "rule_id",
          "trigger_field"
        ],
        "properties": {
          "rule_id": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "trigger_field": {
            "type": "string",
            "minLength": 1
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "check": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
