{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specfactory.local/schemas/field_groups_schema.json",
  "title": "Field Groups",
  "type": "object",
  "required": [
    "category",
    "groups"
  ],
  "properties": {
    "category": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "group_key",
          "display_name",
          "field_keys"
        ],
        "properties": {
          "group_key": {
            "type": "string",
            "minLength": 1
          },
          "display_name": {
            "type": "string",
            "minLength": 1
          },
          "field_keys": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": true
      }
    },
    "group_index": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": true
}
