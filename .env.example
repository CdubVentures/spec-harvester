# Core
AWS_REGION=us-east-2
S3_BUCKET=my-spec-harvester-data
S3_INPUT_PREFIX=specs/inputs
S3_OUTPUT_PREFIX=specs/outputs

# Local-first output
OUTPUT_MODE=dual
MIRROR_TO_S3=true
MIRROR_TO_S3_INPUT=false
LOCAL_INPUT_ROOT=fixtures/s3
LOCAL_OUTPUT_ROOT=out
RUNTIME_EVENTS_KEY=_runtime/events.jsonl

# Runtime
LOCAL_MODE=true
DRY_RUN=false
RUN_PROFILE=standard
WRITE_MARKDOWN_SUMMARY=true
CONCURRENCY=2
MAX_RUN_SECONDS=300
MAX_URLS_PER_PRODUCT=20
MAX_CANDIDATE_URLS_PER_PRODUCT=50
MAX_PAGES_PER_DOMAIN=2
PER_HOST_MIN_DELAY_MS=900

# Discovery
DISCOVERY_ENABLED=true
SEARCH_PROVIDER=dual
GOOGLE_CSE_KEY=
GOOGLE_CSE_CX=
BING_SEARCH_KEY=
BING_SEARCH_ENDPOINT=

# LLM
LLM_ENABLED=true
LLM_PROVIDER=deepseek
LLM_API_KEY=
LLM_BASE_URL=https://api.deepseek.com
LLM_MODEL_EXTRACT=deepseek-reasoner
LLM_MODEL_PLAN=deepseek-chat
LLM_MODEL_VALIDATE=deepseek-chat
LLM_TIMEOUT_MS=40000
LLM_REASONING_MODE=true
LLM_REASONING_BUDGET=2048
LLM_MAX_EVIDENCE_CHARS=60000
LLM_MAX_OUTPUT_TOKENS=1200

# LLM cost model
LLM_COST_INPUT_PER_1M=0.28
LLM_COST_OUTPUT_PER_1M=0.42
LLM_COST_CACHED_INPUT_PER_1M=0.028
LLM_COST_INPUT_PER_1M_DEEPSEEK_CHAT=0.28
LLM_COST_OUTPUT_PER_1M_DEEPSEEK_CHAT=0.42
LLM_COST_CACHED_INPUT_PER_1M_DEEPSEEK_CHAT=0.028
LLM_COST_INPUT_PER_1M_DEEPSEEK_REASONER=0.28
LLM_COST_OUTPUT_PER_1M_DEEPSEEK_REASONER=0.42
LLM_COST_CACHED_INPUT_PER_1M_DEEPSEEK_REASONER=0.028

# Budgets
LLM_MONTHLY_BUDGET_USD=200
LLM_PER_PRODUCT_BUDGET_USD=0.10
LLM_MAX_CALLS_PER_PRODUCT_TOTAL=10
LLM_MAX_CALLS_PER_PRODUCT_FAST=2
LLM_MAX_CALLS_PER_ROUND=4

# Intake / daemon
IMPORTS_ROOT=imports
IMPORTS_POLL_SECONDS=10

# Helper files
HELPER_FILES_ENABLED=true
HELPER_FILES_ROOT=helper_files
HELPER_SUPPORTIVE_ENABLED=true
HELPER_SUPPORTIVE_FILL_MISSING=true
HELPER_SUPPORTIVE_MAX_SOURCES=6
HELPER_AUTO_SEED_TARGETS=true
